<Window x:Class="ExpansesManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExpansesManager"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="button1" Content="Login" HorizontalAlignment="Left" Margin="282,194,0,0" VerticalAlignment="Top" Width="75" Click="LoginButton_Click"/>
        <TextBox x:Name="UsernameTextBox" HorizontalAlignment="Left" Height="23" Margin="153,124,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="204"/>
        <Label x:Name="label" Content="Username:" HorizontalAlignment="Left" Margin="81,121,0,0" VerticalAlignment="Top" Width="68"/>
        <Label x:Name="label1" Content="Password:" HorizontalAlignment="Left" Margin="81,155,0,0" VerticalAlignment="Top" Width="67" RenderTransformOrigin="0.473,0.066"/>
        <Button x:Name="button" Content="Register" HorizontalAlignment="Left" Margin="28,274,0,0" VerticalAlignment="Top" Width="75" Click="RegisterButton_Click"/>
        <PasswordBox x:Name="PasswordBox" PasswordChar="*" HorizontalAlignment="Left" Margin="153,155,0,0" VerticalAlignment="Top" Width="204" Height="26"/>

    </Grid>
</Window>
